extends layout

block content
 
    
    each val in data
      .row
        .col-6
         .card-panel.teal.lighten-2
           .card-content


              .card-title.white
                h3 #{val.superhero}
                
                h6 #{val.id}
                ul#nav-mobile.right.hide-on-med-and-down
                 a.navbar-brand(href='/getAllHeros').btn Back
                p Real Name : #{val.alter_ego}
                p Publisher : #{val.publisher}
                p Appearance: #{val.first_appearance}
                p Characters: #{val.characters}
                p Valid  : #{val.is_valid}
                p Update : #{val.update_time}
